import React, { useState, useEffect } from 'react'
import { ChevronLeft, ChevronRight, Star, Phone, Mail, MapPin, Clock, Facebook, Instagram, Users, Monitor, Camera, BookOpen, Activity, Settings, Award, Target } from 'lucide-react'
import { useSiteContent } from '../context/SiteContentContext'
import PhotoModal from '../components/PhotoModal'
import Mascotes from '../components/Mascotes'

const HomePage: React.FC = () => {
  const { content } = useSiteContent()
  const [currentPhoto, setCurrentPhoto] = useState(0)
  const [currentTestimonial, setCurrentTestimonial] = useState(0)
  const [isPhotoModalOpen, setIsPhotoModalOpen] = useState(false)
  const [modalPhotoIndex, setModalPhotoIndex] = useState(0)

  // Auto-advance photo carousel
  useEffect(() => {
    if (content.galeria.fotos && content.galeria.fotos.length > 0) {
      const interval = setInterval(() => {
        setCurrentPhoto(prev => (prev + 1) % content.galeria.fotos!.length)
      }, 5000)
      return () => clearInterval(interval)
    }
  }, [content.galeria.fotos])

  // Photo modal functions
  const openPhotoModal = (index: number) => {
    setModalPhotoIndex(index)
    setIsPhotoModalOpen(true)
  }

  const closePhotoModal = () => {
    setIsPhotoModalOpen(false)
  }

  const nextModalPhoto = () => {
    if (content.galeria.fotos) {
      setModalPhotoIndex(prev => (prev + 1) % content.galeria.fotos!.length)
    }
  }

  const previousModalPhoto = () => {
    if (content.galeria.fotos) {
      setModalPhotoIndex(prev => prev === 0 ? content.galeria.fotos!.length - 1 : prev - 1)
    }
  }

  // Auto-advance testimonials
  useEffect(() => {
    if (content.depoimentos.depoimentos && content.depoimentos.depoimentos.length > 0) {
      const interval = setInterval(() => {
        setCurrentTestimonial(prev => (prev + 1) % content.depoimentos.depoimentos!.length)
      }, 7000)
      return () => clearInterval(interval)
    }
  }, [content.depoimentos.depoimentos])

  // Get icon component by name
  const getIconComponent = (iconName: string) => {
    const icons = { Users, Monitor, Camera, BookOpen, Activity, Settings, Award, Target, Star }
    return icons[iconName as keyof typeof icons] || Users
  }

  return (
    <div className="min-h-screen">
      {/* Hero Section */}
      <section
        className="relative min-h-screen flex items-center justify-center"
        style={content.hero.imagem_fundo ? {
          backgroundImage: `linear-gradient(${content.configuracoes.gradiente_cor1 || '#3B82F6'}cc, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'}cc), url(${content.hero.imagem_fundo})`,
          backgroundSize: 'cover',
          backgroundPosition: 'center'
        } : {
          background: `linear-gradient(135deg, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'}, ${content.configuracoes.gradiente_cor3 || '#10B981'})`
        }}
      >
        {/* Background Pattern */}
        <div className="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23ffffff%22%20fill-opacity%3D%220.05%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%224%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20" />

        <div className="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
          <div>
            <h1 className="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
              {content.hero.titulo}
            </h1>
            <p className="text-xl sm:text-2xl lg:text-3xl font-light mb-6 text-white/90">
              {content.hero.subtitulo}
            </p>
            <p className="text-lg sm:text-xl mb-8 max-w-3xl mx-auto text-white/80">
              {content.hero.descricao}
            </p>

            <div className="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center">
              <a
                href="/login"
                className="inline-block bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
              >
                {content.hero.botao_texto || 'Portal de Login'}
              </a>
            </div>
          </div>
        </div>

        {/* Floating Elements */}
        <div className="absolute top-10 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl animate-pulse" />
        <div className="absolute bottom-10 right-10 w-32 h-32 bg-white/10 rounded-full blur-2xl animate-pulse" style={{ animationDelay: '1s' }} />
        <div className="absolute top-1/2 right-20 w-16 h-16 bg-white/10 rounded-full blur-lg animate-pulse" style={{ animationDelay: '2s' }} />

        {/* Mascotes */}
        <Mascotes position="hero" />
      </section>

      {/* Nossa História Section */}
      <section id="sobre" className="py-20 bg-white">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
              <h2
                className="text-3xl sm:text-4xl font-bold mb-6 bg-gradient-to-r bg-clip-text text-transparent"
                style={{
                  backgroundImage: `linear-gradient(to right, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'})`
                }}
              >
                {content.sobre.titulo}
              </h2>
              <p className="text-lg text-gray-600 mb-8 leading-relaxed">
                {content.sobre.descricao}
              </p>

              <div className="grid grid-cols-2 gap-6">
                {content.sobre.anos_experiencia && (
                  <div className="text-center">
                    <div className="text-3xl font-bold text-primary-600 mb-2">
                      {content.sobre.anos_experiencia}
                    </div>
                    <div className="text-gray-600">Anos de experiência</div>
                  </div>
                )}
                {content.sobre.alunos_formados && (
                  <div className="text-center">
                    <div className="text-3xl font-bold text-primary-600 mb-2">
                      {content.sobre.alunos_formados}
                    </div>
                    <div className="text-gray-600">Alunos formados</div>
                  </div>
                )}
              </div>

              {content.sobre.valores && content.sobre.valores.length > 0 && (
                <div className="mt-8">
                  <h3 className="text-xl font-semibold text-gray-900 mb-4">Nossos Valores</h3>
                  <div className="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    {content.sobre.valores.map((valor, index) => (
                      <div key={index} className="flex items-center space-x-2">
                        <Star className="w-5 h-5 text-yellow-500" />
                        <span className="text-gray-700">{valor}</span>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>

            <div>
              {content.sobre.imagem ? (
                <img
                  src={content.sobre.imagem}
                  alt="Nossa escola"
                  className="w-full h-96 object-cover rounded-lg shadow-xl"
                />
              ) : (
                <div className="w-full h-96 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-lg shadow-xl flex items-center justify-center">
                  <BookOpen className="w-24 h-24 text-primary-400" />
                </div>
              )}
            </div>
          </div>

        </div>
      </section>

      {/* Galeria Section */}
      {content.galeria.fotos && content.galeria.fotos.length > 0 && (
        <section id="galeria" className="py-20 bg-gray-50">
          <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div className="text-center mb-12">
              <h2
                className="text-3xl sm:text-4xl font-bold mb-4 bg-gradient-to-r bg-clip-text text-transparent"
                style={{
                  backgroundImage: `linear-gradient(to right, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'})`
                }}
              >
                {content.galeria.titulo}
              </h2>
              {content.galeria.descricao && (
                <p className="text-lg text-gray-600 max-w-2xl mx-auto">
                  {content.galeria.descricao}
                </p>
              )}
            </div>

            <div className="relative">
              <div className="relative h-96 rounded-lg overflow-hidden bg-gray-100">
                {(() => {
                  const currentFoto = content.galeria.fotos[currentPhoto]
                  // Handle both old format (string) and new format (object)
                  const fotoData = typeof currentFoto === 'string'
                    ? { url: currentFoto, titulo: '', descricao: '' }
                    : currentFoto || { url: '', titulo: '', descricao: '' }

                  return (
                    <>
                      <img
                        src={fotoData.url}
                        alt={fotoData.titulo || `Foto ${currentPhoto + 1}`}
                        className="w-full h-full object-cover cursor-pointer hover:opacity-95 transition-opacity"
                        onClick={() => openPhotoModal(currentPhoto)}
                      />

                      {/* Click to expand indicator */}
                      <div className="absolute top-4 right-4 bg-black/50 text-white text-xs px-2 py-1 rounded">
                        Clique para expandir
                      </div>

                      {/* Photo info overlay */}
                      {(fotoData.titulo || fotoData.descricao) && (
                        <div className="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 via-black/50 to-transparent p-6">
                          {fotoData.titulo && (
                            <h3 className="text-white font-semibold text-lg mb-1">
                              {fotoData.titulo}
                            </h3>
                          )}
                          {fotoData.descricao && (
                            <p className="text-white/90 text-sm">
                              {fotoData.descricao}
                            </p>
                          )}
                        </div>
                      )}
                    </>
                  )
                })()}

                {/* Navigation buttons */}
                <button
                  onClick={() => setCurrentPhoto(prev => prev === 0 ? content.galeria.fotos!.length - 1 : prev - 1)}
                  className="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/80 hover:bg-white text-gray-800 p-2 rounded-full transition-colors"
                >
                  <ChevronLeft className="w-6 h-6" />
                </button>
                <button
                  onClick={() => setCurrentPhoto(prev => (prev + 1) % content.galeria.fotos!.length)}
                  className="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/80 hover:bg-white text-gray-800 p-2 rounded-full transition-colors"
                >
                  <ChevronRight className="w-6 h-6" />
                </button>

                {/* Dots indicator */}
                <div className="absolute top-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
                  {content.galeria.fotos.map((_, index) => (
                    <button
                      key={index}
                      onClick={() => setCurrentPhoto(index)}
                      className={`w-3 h-3 rounded-full transition-colors ${
                        index === currentPhoto ? 'bg-white' : 'bg-white/50'
                      }`}
                    />
                  ))}
                </div>

                {/* Counter */}
                <div className="absolute top-4 right-4 bg-black/50 text-white text-sm px-3 py-1 rounded-full">
                  {currentPhoto + 1} / {content.galeria.fotos.length}
                </div>
              </div>

              {/* Thumbnail navigation - responsive grid */}
              <div className="mt-6">
                {/* Desktop: 2 rows of 5 for up to 10 photos */}
                <div className="hidden md:block">
                  <div className="grid grid-cols-5 gap-3 max-w-md mx-auto">
                    {content.galeria.fotos.map((foto, index) => {
                      const fotoData = typeof foto === 'string'
                        ? { url: foto, titulo: '', descricao: '' }
                        : foto

                      return (
                        <button
                          key={index}
                          onClick={() => openPhotoModal(index)}
                          className={`w-full aspect-square rounded-lg overflow-hidden border-2 transition-all cursor-pointer hover:scale-105 ${
                            index === currentPhoto
                              ? 'border-primary-500 ring-2 ring-primary-200'
                              : 'border-gray-200 hover:border-gray-300'
                          }`}
                        >
                          <img
                            src={fotoData.url}
                            alt={fotoData.titulo || `Miniatura ${index + 1}`}
                            className="w-full h-full object-cover"
                          />
                        </button>
                      )
                    })}
                  </div>
                </div>

                {/* Mobile: horizontal scroll */}
                <div className="md:hidden flex space-x-3 overflow-x-auto px-4 pb-2 -mx-4">
                  {content.galeria.fotos.map((foto, index) => {
                    const fotoData = typeof foto === 'string'
                      ? { url: foto, titulo: '', descricao: '' }
                      : foto

                    return (
                      <button
                        key={index}
                        onClick={() => openPhotoModal(index)}
                        className={`flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden border-2 transition-all cursor-pointer hover:scale-105 ${
                          index === currentPhoto
                            ? 'border-primary-500 ring-2 ring-primary-200'
                            : 'border-gray-200 hover:border-gray-300'
                        }`}
                      >
                        <img
                          src={fotoData.url}
                          alt={fotoData.titulo || `Miniatura ${index + 1}`}
                          className="w-full h-full object-cover"
                        />
                      </button>
                    )
                  })}
                </div>
              </div>
            </div>

          </div>
        </section>
      )}

      {/* Nossos Diferenciais Section */}
      {content.diferenciais.diferenciais && content.diferenciais.diferenciais.length > 0 && (
        <section id="diferenciais" className="py-20 bg-gray-50">
          <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div className="text-center mb-16">
              <h2
                className="text-3xl sm:text-4xl font-bold mb-4 bg-gradient-to-r bg-clip-text text-transparent"
                style={{
                  backgroundImage: `linear-gradient(to right, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'})`
                }}
              >
                {content.diferenciais.titulo}
              </h2>
              {content.diferenciais.descricao && (
                <p className="text-lg text-gray-600 max-w-2xl mx-auto">
                  {content.diferenciais.descricao}
                </p>
              )}
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
              {content.diferenciais.diferenciais.map((diferencial, index) => {
                const IconComponent = getIconComponent(diferencial.icone || 'Star')
                return (
                  <div
                    key={index}
                    className="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow border border-gray-100"
                  >
                    <div className="w-16 h-16 bg-orange-100 rounded-lg flex items-center justify-center mb-6">
                      <IconComponent className="w-8 h-8 text-orange-600" />
                    </div>
                    <h3 className="text-xl font-semibold text-gray-900 mb-4">
                      {diferencial.titulo}
                    </h3>
                    <p className="text-gray-600 leading-relaxed">
                      {diferencial.descricao}
                    </p>
                  </div>
                )
              })}
            </div>

          </div>
        </section>
      )}

      {/* Nossos Serviços Section */}
      {content.servicos.servicos && content.servicos.servicos.length > 0 && (
        <section id="servicos" className="py-20 bg-white">
          <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div className="text-center mb-16">
              <h2
                className="text-3xl sm:text-4xl font-bold mb-4 bg-gradient-to-r bg-clip-text text-transparent"
                style={{
                  backgroundImage: `linear-gradient(to right, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'})`
                }}
              >
                {content.servicos.titulo}
              </h2>
              {content.servicos.descricao && (
                <p className="text-lg text-gray-600 max-w-2xl mx-auto">
                  {content.servicos.descricao}
                </p>
              )}
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
              {content.servicos.servicos.map((servico, index) => {
                const IconComponent = getIconComponent(servico.icone)
                return (
                  <div
                    key={index}
                    className="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow border border-gray-100"
                  >
                    <div className="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                      <IconComponent className="w-8 h-8 text-primary-600" />
                    </div>
                    <h3 className="text-xl font-semibold text-gray-900 mb-4">
                      {servico.titulo}
                    </h3>
                    <p className="text-gray-600 leading-relaxed">
                      {servico.descricao}
                    </p>
                  </div>
                )
              })}
            </div>

          </div>
        </section>
      )}

      {/* Depoimentos Section */}
      {content.depoimentos.depoimentos && content.depoimentos.depoimentos.length > 0 && (
        <section id="depoimentos" className="py-20 bg-gray-50">
          <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div className="text-center mb-16">
              <h2
                className="text-3xl sm:text-4xl font-bold mb-4 bg-gradient-to-r bg-clip-text text-transparent"
                style={{
                  backgroundImage: `linear-gradient(to right, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'})`
                }}
              >
                {content.depoimentos.titulo}
              </h2>
            </div>

            <div className="relative max-w-4xl mx-auto">
              <div className="bg-white p-8 rounded-lg shadow-lg">
                <div className="flex items-center justify-center mb-6">
                  <div className="flex space-x-1">
                    {[...Array(5)].map((_, i) => (
                      <Star key={i} className="w-5 h-5 text-yellow-500 fill-current" />
                    ))}
                  </div>
                </div>

                <blockquote className="text-lg text-gray-700 text-center mb-6 italic">
                  "{content.depoimentos.depoimentos[currentTestimonial].depoimento}"
                </blockquote>

                <div className="text-center">
                  <div className="font-semibold text-gray-900">
                    {content.depoimentos.depoimentos[currentTestimonial].nome}
                  </div>
                  <div className="text-gray-600">
                    {content.depoimentos.depoimentos[currentTestimonial].cargo}
                  </div>
                </div>

                {/* Dots indicator */}
                <div className="flex justify-center space-x-2 mt-6">
                  {content.depoimentos.depoimentos.map((_, index) => (
                    <button
                      key={index}
                      onClick={() => setCurrentTestimonial(index)}
                      className={`w-3 h-3 rounded-full transition-colors ${
                        index === currentTestimonial ? 'bg-primary-600' : 'bg-gray-300'
                      }`}
                    />
                  ))}
                </div>
              </div>
            </div>

          </div>
        </section>
      )}

      {/* Contato Section */}
      <section id="contato" className="py-20 bg-white">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center mb-16">
            <h2
              className="text-3xl sm:text-4xl font-bold mb-4 bg-gradient-to-r bg-clip-text text-transparent"
              style={{
                backgroundImage: `linear-gradient(to right, ${content.configuracoes.gradiente_cor1 || '#3B82F6'}, ${content.configuracoes.gradiente_cor2 || '#8B5CF6'})`
              }}
            >
              {content.contato.titulo}
            </h2>
          </div>

          <div className="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div className="space-y-6">
              <div className="flex items-start space-x-4">
                <MapPin className="w-6 h-6 text-primary-600 mt-1" />
                <div>
                  <h3 className="font-semibold text-gray-900 mb-2">Endereço</h3>
                  <p className="text-gray-600 whitespace-pre-line">{content.contato.endereco}</p>
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <Phone className="w-6 h-6 text-primary-600 mt-1" />
                <div>
                  <h3 className="font-semibold text-gray-900 mb-2">Telefone</h3>
                  <p className="text-gray-600">{content.contato.telefone}</p>
                  {content.contato.whatsapp && (
                    <p className="text-gray-600">WhatsApp: {content.contato.whatsapp}</p>
                  )}
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <Mail className="w-6 h-6 text-primary-600 mt-1" />
                <div>
                  <h3 className="font-semibold text-gray-900 mb-2">Email</h3>
                  <p className="text-gray-600">{content.contato.email}</p>
                </div>
              </div>

              {content.contato.horario_funcionamento && (
                <div className="flex items-start space-x-4">
                  <Clock className="w-6 h-6 text-primary-600 mt-1" />
                  <div>
                    <h3 className="font-semibold text-gray-900 mb-2">Horário de Funcionamento</h3>
                    <p className="text-gray-600 whitespace-pre-line">{content.contato.horario_funcionamento}</p>
                  </div>
                </div>
              )}

              {/* Social Media */}
              <div className="flex items-center space-x-4 pt-6">
                {content.contato.facebook && (
                  <a
                    href={content.contato.facebook}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="text-blue-600 hover:text-blue-700 transition-colors"
                  >
                    <Facebook className="w-6 h-6" />
                  </a>
                )}
                {content.contato.instagram && (
                  <a
                    href={`https://instagram.com/${content.contato.instagram.replace('@', '')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    className="text-pink-600 hover:text-pink-700 transition-colors"
                  >
                    <Instagram className="w-6 h-6" />
                  </a>
                )}
              </div>
            </div>

            <div>
              {content.contato.mapa_url ? (
                <iframe
                  src={`https://www.google.com/maps/embed/v1/place?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dgsWs&q=${encodeURIComponent(content.contato.endereco)}`}
                  width="100%"
                  height="400"
                  style={{ border: 0 }}
                  allowFullScreen
                  loading="lazy"
                  referrerPolicy="no-referrer-when-downgrade"
                  className="rounded-lg shadow-lg"
                />
              ) : (
                <div className="w-full h-96 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-lg shadow-lg flex items-center justify-center">
                  <MapPin className="w-24 h-24 text-primary-400" />
                </div>
              )}
            </div>
          </div>

        </div>
      </section>

      {/* Photo Modal */}
      {content.galeria.fotos && content.galeria.fotos.length > 0 && (
        <PhotoModal
          isOpen={isPhotoModalOpen}
          onClose={closePhotoModal}
          photos={content.galeria.fotos.map(foto =>
            typeof foto === 'string'
              ? { url: foto, titulo: '', descricao: '' }
              : foto
          )}
          currentIndex={modalPhotoIndex}
          onNext={nextModalPhoto}
          onPrevious={previousModalPhoto}
        />
      )}
    </div>
  )
}

export default HomePage